extends ../base.pug

block content
  if errorMessage 
    span=erroressage
  form(method='POST' enctype="multipart/form-data") 
    label(for="video") Video File 
    input(type="file" id="video" name='video' required accept="video/*") 
    input(type="text", name="title", required, placeholder="Title" maxlength=20)
    input(type="text", name="description", required, placeholder="Description" minlength=10)
    input(type="text", name="hashtags", required, placeholder="Hashtags, separated by comma.")
    input(type="submit", value="Upload Video")